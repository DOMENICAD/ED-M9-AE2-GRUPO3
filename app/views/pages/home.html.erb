<% if current_user  %>
  <h2>Hola [<%= current_user.role %>] <%= current_user.email %>  <% @a %></h2>
  <p>Productos</p>
  <%#= link_to "Sign out", destroy_user_session_path,  data: { turbo_method: :get }  %>

